<h1>New User</h1>
<form action="/users" method="POST">
  <%= auth_input %>
  <label>Email: <input type="text" name="user[email]"
                       value="<%= @user.email %>"></label>
  <label>Password: <input type="password" name="user[password]"></label>
  <input type="submit" value="Sign up">
</form>
